<link rel="stylesheet" type="text/css" href="/css/login.css">

<form action="/auth/login" method="POST" class="col-xs-6 col-xs-offset-3">
  <div class="form-group">
    <label for="authEmail">Email</label>
    <input id="authEmail" class="form-control" type="email" name="email">
  </div>

  <div class="form-group">
    <label for="authPassword">Password</label>
    <input id="authPassword" class="form-control" type="password" name="password">
  </div>

  <input class="btn" type="submit">
</form>

<div class="col-xs-6 col-xs-offset-3">
  <p>Don't have an account? Please <a href="/auth/signup">Sign-up!</a></p>
</div>
